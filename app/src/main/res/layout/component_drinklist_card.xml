<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/drinklist_card_padding_horizontal"
        android:paddingStart="@dimen/drinklist_card_padding_horizontal"
        android:paddingBottom="@dimen/drinklist_card_padding_vertical">

        <TextView
            android:id="@+id/drinkCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/drinklist_card_name_size"
            android:textStyle="bold"
            android:text="Card name"
            android:paddingTop="@dimen/drinklist_card_name_padding_top" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/drinkCardName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/drinklist_card_padding_horizontal"
            android:paddingEnd="@dimen/drinklist_card_padding_horizontal">

            <TextView
                android:id="@+id/drinkCardIndex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_m"
                android:paddingRight="@dimen/padding_m"
                android:textColor="@color/drink_index_text"
                android:textSize="@dimen/text_size_xl"
                android:text="9999"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_m">

                <ImageView
                    android:layout_width="@dimen/drinklist_card_icon_size"
                    android:layout_height="@dimen/drinklist_card_icon_size"
                    android:src="@drawable/ic_percent"
                    android:tint="@color/percent" />

                <TextView
                    android:id="@+id/drinkCardPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/drinklist_card_name_size"
                    android:text="25%"
                    android:textColor="@color/percent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_m">

                <ImageView
                    android:layout_width="@dimen/drinklist_card_icon_size"
                    android:layout_height="@dimen/drinklist_card_icon_size"
                    android:src="@drawable/ic_price"
                    android:tint="@color/price" />

                <TextView
                    android:id="@+id/drinkCardPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/drinklist_card_name_size"
                    android:text="2500 Ft"
                    android:textColor="@color/price" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_m">

                <ImageView
                    android:layout_width="@dimen/drinklist_card_icon_size"
                    android:layout_height="@dimen/drinklist_card_icon_size"
                    android:src="@drawable/ic_capacity"
                    android:tint="@color/capacity" />

                <TextView
                    android:id="@+id/drinkCardCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/drinklist_card_name_size"
                    android:text="1 l"
                    android:textColor="@color/capacity" />

            </LinearLayout>

        </LinearLayout>



        <ImageView
            android:id="@+id/drinkCardPopupIcon"
            android:layout_width="@dimen/drinklist_card_popup_icon_size"
            android:layout_height="@dimen/drinklist_card_popup_icon_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:tint="@color/popup_icon"
            android:padding="8dp"
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless" />

    </RelativeLayout>

</merge>
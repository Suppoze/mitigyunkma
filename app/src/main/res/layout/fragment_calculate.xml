<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <include layout="@layout/component_drink_index"
        android:id="@+id/component_drink_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_l"/>

    <LinearLayout
        android:id="@+id/calculate_view_input_row"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/component_drink_index">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/calculate_view_percentage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text_input_layout"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_weight="1">

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:hint="@string/calculate_view_percentage_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/calculate_view_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text_input_layout"
            android:layout_weight="1">

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="number"
                android:hint="@string/calculate_view_price_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/calculate_view_capacity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text_input_layout"
            android:layout_weight="1">

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:hint="@string/calculate_view_capacity_hint" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calculate_view_button_row"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/component_reset_button"
            android:id="@+id/button_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7" />

        <include layout="@layout/component_save_button"
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="3" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/calculate_view_numpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/calculate_view_button_row"
        android:layout_below="@id/calculate_view_input_row"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:columnCount="3">

        <Button android:id="@+id/numpad_1"
            android:text="1"/>
        <Button android:id="@+id/numpad_2"
            android:text="2"/>
        <Button android:id="@+id/numpad_3"
            android:text="3"/>
        <Button android:id="@+id/numpad_4"
            android:text="4"/>
        <Button android:id="@+id/numpad_5"
            android:text="5"/>
        <Button android:id="@+id/numpad_6"
            android:text="6"/>
        <Button android:id="@+id/numpad_7"
            android:text="7"/>
        <Button android:id="@+id/numpad_8"
            android:text="7"/>
        <Button android:id="@+id/numpad_9"
            android:text="8"/>
        <Button android:id="@+id/numpad_delete"
            android:text="del"/>
        <Button android:id="@+id/numpad_0"
            android:text="0"/>
        <Button android:id="@+id/numpad_decimal"
            android:text="."/>

    </GridLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/drink_index_background_shadow" />
            <corners android:radius="10dp" />
            <padding
                android:left="0dip"
                android:top="0dip"
                android:right="0dip"
                android:bottom="0dip" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="@dimen/drink_index_shadow">

        <shape android:shape="rectangle">
            <solid android:color="@color/drink_index_background"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>
